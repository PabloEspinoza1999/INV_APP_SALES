        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>

            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.NIF)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NIF)
            </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Zone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Zone.Province)
        </dd>
        <dt class = "col-sm-2">
